<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:padding="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageviewHinh"/>
    <TextView
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#E61919"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewTen"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Ten"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewMoTa"
        android:text="Mo Ta"
        android:layout_toRightOf="@id/imageviewHinh"
        android:layout_below="@id/textviewTen"
        android:textStyle="normal"
        android:textColor="#D81B60"
        android:textSize="24sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textviewGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewMoTa"
        android:layout_toRightOf="@id/imageviewHinh"
        android:paddingTop="10dp"
        android:text="Gia"
        android:textColor="#E61919"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="70dp"
        />

</RelativeLayout>
